<Window x:Class="car_traffic_simulation.DataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:car_traffic_simulation"
        mc:Ignorable="d"
        Title="DataWindow" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="vehicleDataGrid" HorizontalAlignment="Left" Height="384" VerticalAlignment="Top" Width="400" Margin="0,35,0,0"/>
        <DataGrid x:Name="intersectionDataGrid" HorizontalAlignment="Left" Height="384" Margin="400,35,0,0" VerticalAlignment="Top" Width="400"/>
        <Label Content="Vehicles" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="400" FontSize="16"/>
        <Label Content="Intersections" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Width="400" Margin="400,0,-8,0" FontSize="16"/>

    </Grid>
</Window>
